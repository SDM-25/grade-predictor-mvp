# Exam Readiness Predictor - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (choose one format):

# SQLite (local development - default if not set)
DATABASE_URL=sqlite:///grade_predictor.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Supabase PostgreSQL example:
# DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# STREAMLIT CLOUD SECRETS (alternative to DATABASE_URL)
# =============================================================================
# If deploying to Streamlit Cloud, use .streamlit/secrets.toml instead:
#
# DB_HOST = "db.your-project.supabase.co"
# DB_NAME = "postgres"
# DB_USER = "postgres"
# DB_PASSWORD = "your-password"
# DB_PORT = 5432

# =============================================================================
# ADMIN CONFIGURATION (optional)
# =============================================================================

# Admin username for accessing /admin dashboard
# ADMIN_USERNAME=admin

# Admin password - USE BCRYPT HASH IN PRODUCTION
# Generate hash: python -c "import bcrypt; print(bcrypt.hashpw(b'your-password', bcrypt.gensalt()).decode())"
# ADMIN_PASSWORD_HASH=$2b$12$...your-bcrypt-hash...

# For development only (not recommended for production):
# ADMIN_PASSWORD=your-plain-password

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Streamlit server settings (usually not needed)
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
